<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag2">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="당신은 어떤 성향이신가요?\n챗봇이 성향에 따라 여행지를 추천해드립니다."
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/chat_image_view"
                android:layout_width="wrap_content"
                android:layout_height="477dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/chat_image" />

            <Button
                android:id="@+id/chat_kakao_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="kakaoButtonClick"
                android:background="#F7E600"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="카카오톡 실행하기"
                android:textColor="#3C1E1E"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/chat_kakao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="챗봇을 실행하시려면 위 실행 버튼을 눌러,\n플러스친구 '수정구'를 추가해주세요." />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>